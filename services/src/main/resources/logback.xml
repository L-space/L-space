<!-- https://www.playframework.com/documentation/latest/SettingsLogger -->
<configuration>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%date{"HH:mm:ss.SSS"} %highlight(%-5level) %cyan(%logger{40}) [%thread] - %msg%n</pattern>
    </encoder>
  </appender>

  <logger name="lspace" level="warn" />

  <root level="warn">
    <appender-ref ref="STDOUT" />
  </root>

</configuration>
